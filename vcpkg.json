{
    "name": "phosphorus",
    "description": "Phosphorus engine",
    "version-string": "0.1.0",
    "dependencies": [
        "clu",
        "spdlog",
        "glm",
        "glfw3",
        {
            "name": "imgui",
            "features": ["docking-experimental"]
        }
    ],
    "features": {
        "windows": {
            "description": "Build for Windows platform",
            "dependencies": [
                {
                    "name": "imgui",
                    "features": ["win32-binding"]
                }
            ]
        },
        "x11": {
            "description": "Build for Linux platform, with X11 being the window system"
        },
        "opengl": {
            "description": "Build OpenGL backend",
            "dependencies": [
                "glad",
                {
                    "name": "imgui",
                    "features": ["opengl3-binding", "glfw-binding"]
                }
            ]
        }
    }
}
